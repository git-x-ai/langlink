{
  "name": "langlink",
  "version": "1.0.0",
  "description": "LangLink - Desktop application for managing and downloading Cursor AI .cursorrules files",
  "main": "public/electron.js",
  "homepage": "https://ccc-suite.sellhub.cx/",
  "author": "CCC Suite",
  "copyright": "© 2025 CCC Suite. All rights reserved.",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/git-x-ai/langlink.git"
  },
  "bugs": {
    "url": "https://github.com/git-x-ai/langlink/issues"
  },
  "keywords": [
    "cursor-ai",
    "cursorrules",
    "cursor",
    "ai-assistant",
    "electron",
    "react",
    "typescript",
    "tailwindcss",
    "development-tools",
    "code-quality",
    "best-practices",
    "desktop-app",
    "rule-manager",
    "ccc-suite"
  ],
  "private": true,
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "start-no-browser": "node start-react-no-browser.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run start-no-browser\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build",
    "build:win-x64": "npm run build && electron-builder --win --x64",
    "build:win-ia32": "npm run build && electron-builder --win --ia32",
    "build:win-arm64": "npm run build && electron-builder --win --arm64"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "fs-extra": "^11.1.1",
    "lenis": "^1.3.11",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "electron": "^38.2.1",
    "electron-builder": "^24.6.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.cccsuite.langlink",
    "productName": "LangLink",
    "copyright": "Copyright © 2025 CCC Suite. All rights reserved.",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../rules",
        "to": "rules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/logo.ico",
      "publisherName": "CCC Suite",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/logo.ico",
      "uninstallerIcon": "assets/uninstall.ico",
      "installerHeaderIcon": "assets/logo.ico",
      "installerSidebar": "assets/wizard.bmp",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LangLink",
      "displayLanguageSelector": false,
      "language": "1033",
      "installerLanguages": [
        "en_US"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/logo.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/logo.png",
      "category": "Development"
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "publish": null
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
